<h1>遊び投稿一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>投稿したユーザーネーム</th>
      <th>遊び名</th>
      <th>内容</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.user.username %></td>
      <td><%= post.name %></td>
      <td><%= post.introduction %></td>
    </tr>
    <% end %>
  </tbody>
</table>