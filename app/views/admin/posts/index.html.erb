<%= flash[:notice] %>

<h3>あそび一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th>投稿ID</th>
      <th>遊び名</th>
      <th>内容</th>
      <th>投稿者</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td>
        <%= link_to admin_post_path(post.id) do %>
          <%= post.name %>
        <% end %>
      </td>
      <td><%= post.introduction %></td>
      <td>
        <%= link_to  admin_user_path(post.user.id) do%>
          <%= post.user.username %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>