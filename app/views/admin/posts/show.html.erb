<h2><%= @post.name %></h2>
      <%= link_to "遊びの削除する" ,admin_post_path(@post.id) , method: :delete , "data-confirm" => "本当に削除しますか？" %>
            投稿者：<%= link_to admin_user_path(@post.user) do %>
            <%=@post.user.username %>
          <% end %>
          <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>

        <%= @post.genre.name %><br>
        <%= @post.introduction %><br>
        約<%= @post.age %>歳から<br>
        約<%= @post.time %>分<br>

<h3>コメント</h3>
<p>コメント件数：<%= @comments.count %></p>


  <tableclass ="table">
  <tr><% @comments.each do |comment| %>
    <th><%= comment.user.username %></th>
    <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>

    <td><%= link_to "コメントの削除" ,admin_comment_path(comment.id) , method: :delete , "data-confirm" => "本当に削除しますか？" %></td>
</tr> <% end %>
</table>



