
<h1><%= @user.username %>さんの編集</h1>

<%= form_with model: @user, url:admin_user_path(@user.id) do |f| %>
 <div class="form_group">
    <label for= "user_is_deleted">会員ステータス</label><br>
     <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効にする" %>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会済みにする" %>

  </div>

  <div class="actions">
    <%= f.submit "変更を保存" , class: "btn btn-success btn-sm" %>
  </div>

  <% end %>