<%= flash[:notice] %>

<div class="container  col-md-10 col-md-offset-1">


  <div class= "row">
    <ul>
    <div class= "squeeze mt-5 mr-5 ">
      <div class="genre_title">ジャンル検索</div>
      <% @genres.each do|genre| %>
        <%= link_to genre_path(genre) do %>
          <div class="genre_name">
            <%= genre.name %><br>
          </div>
        <% end %>
      <% end %>
    </ul>


  <div class="post">
    <div class="row d-flex align-items-end ">
      <h2 class="post_index_title">あそび</h2>
      <p>(全<%= @post %>件)</p>

      <p class= "post_new ml-5"><%= link_to"あそびを投稿する", new_post_path, class:" btn btn-outline-danger " %></p>
    </div>


    <div class="balloon1">
      <p>NEW PLAY!</p>
    </div>

    <% @posts.each do |post| %>
      <div class="box1">
        <%= link_to post_path(post.id) do %>
          <p class="post_name"><%= post.name %></p>
        <% end %>
        <%= link_to user_path(id: post.user.id) do %>
          <i class="fas fa-user"></i><%=post.user.username %>
        <% end %>
      </div>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
