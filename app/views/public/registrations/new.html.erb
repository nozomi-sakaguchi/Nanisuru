
<div class="container text-center" style=height:500px;>

<h2 class=" mb-5">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field mb-4 ">
    <%= f.text_field :username , :placeholder => "ユーザーネーム" %>
  </div>

  <div class="field mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス"  %>
  </div>

  <div class="field mb-4">
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード(６文字以上)"  %>
  </div>

  <div class="field mb-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード(確認用)"  %>
  </div>

  <div class="actions mt-3 mb-5">
    <%= f.submit "登録する" ,class:"btn btn-outline-danger" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
</div>